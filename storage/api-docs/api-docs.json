                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/bus-journals": {
            "get": {
                "tags": [
                    "BusJournal"
                ],
                "summary": "Lister les trajets du carnet de bord",
                "operationId": "a016430eb2360c7d54ee7d4fed91f360",
                "parameters": [
                    {
                        "name": "bus_id",
                        "in": "query",
                        "description": "Filtrer par ID de bus",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "chauffeur_id",
                        "in": "query",
                        "description": "Filtrer par ID de chauffeur",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des journaux",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "journaux": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "bus_id": {
                                                        "type": "integer"
                                                    },
                                                    "chauffeur_id": {
                                                        "type": "integer"
                                                    },
                                                    "depart": {
                                                        "type": "string"
                                                    },
                                                    "destination": {
                                                        "type": "string"
                                                    },
                                                    "statut": {
                                                        "type": "string"
                                                    },
                                                    "heure_depart": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "heure_arrivee": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "remarques": {
                                                        "type": "string"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "BusJournal"
                ],
                "summary": "Créer un nouveau trajet dans le carnet de bord",
                "operationId": "6ee60a305093583ccb3668eeb093b18b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "bus_id",
                                    "chauffeur_id",
                                    "depart",
                                    "destination",
                                    "heure_depart"
                                ],
                                "properties": {
                                    "bus_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "chauffeur_id": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "depart": {
                                        "type": "string",
                                        "example": "Campus UCBC"
                                    },
                                    "destination": {
                                        "type": "string",
                                        "example": "Faculté de Médecine"
                                    },
                                    "heure_depart": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-04-15T08:00:00Z"
                                    },
                                    "remarques": {
                                        "type": "string",
                                        "example": "Départ à l'heure"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Trajet enregistré avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "journal": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "statut": {
                                                    "type": "string"
                                                },
                                                "depart": {
                                                    "type": "string"
                                                },
                                                "destination": {
                                                    "type": "string"
                                                },
                                                "heure_depart": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/bus-locations": {
            "post": {
                "tags": [
                    "BusLocation"
                ],
                "summary": "Enregistrer la position GPS actuelle d’un bus",
                "operationId": "a2ab7dee6891bb3fbe0079c01ab98d9f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "bus_id",
                                    "latitude",
                                    "longitude"
                                ],
                                "properties": {
                                    "bus_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "latitude": {
                                        "type": "number",
                                        "format": "float",
                                        "example": -1.6345623
                                    },
                                    "longitude": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 29.1245891
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Coordonnées enregistrées avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "bus_id": {
                                                    "type": "integer"
                                                },
                                                "latitude": {
                                                    "type": "number"
                                                },
                                                "longitude": {
                                                    "type": "number"
                                                },
                                                "captured_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/bus/{bus_id}/last-location": {
            "get": {
                "tags": [
                    "BusLocation"
                ],
                "summary": "Afficher la dernière position connue d’un bus",
                "operationId": "6b9c0adfea6da7cc8c0d551523b02594",
                "parameters": [
                    {
                        "name": "bus_id",
                        "in": "path",
                        "description": "ID du bus",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Dernière position du bus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "bus_id": {
                                            "type": "integer"
                                        },
                                        "latitude": {
                                            "type": "number"
                                        },
                                        "longitude": {
                                            "type": "number"
                                        },
                                        "captured_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Aucune position trouvée pour ce bus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/users/get": {
            "get": {
                "tags": [
                    "Utilisateurs"
                ],
                "summary": "Récupérer la liste de tous les utilisateurs",
                "description": "Retourne la liste complète des utilisateurs triés par date de création (plus récents en premier)",
                "operationId": "7fda73c89127ecad4d67bf7293ee8b1b",
                "responses": {
                    "200": {
                        "description": "Liste des utilisateurs récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "users": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "John Doe"
                                                    },
                                                    "matricule": {
                                                        "type": "string",
                                                        "example": "user123"
                                                    },
                                                    "role": {
                                                        "type": "string",
                                                        "example": "etudiant"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-06-27T10:30:00.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Erreur interne du serveur"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/login": {
            "post": {
                "tags": [
                    "Utilisateurs"
                ],
                "summary": "Connexion d'un utilisateur",
                "operationId": "1ec35339eba4f4040db55976c7bec3a9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "matricule",
                                    "password"
                                ],
                                "properties": {
                                    "matricule": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "matricule": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/register": {
            "post": {
                "tags": [
                    "Utilisateurs"
                ],
                "summary": "Inscription d'un nouvel utilisateur",
                "operationId": "1595c5dc5a9282a3bdb44ae98d8c55d9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "matricule",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "matricule": {
                                        "type": "string",
                                        "example": "user123"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "password123"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "etudiant",
                                            "chauffeur",
                                            "admin"
                                        ],
                                        "example": "etudiant"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur enregistré avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "matricule": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur serveur lors de l'inscription",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
