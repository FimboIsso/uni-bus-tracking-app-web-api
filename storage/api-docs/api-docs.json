                                                },
                                                "immatriculation": {
                                                    "type": "string"
                                                },
                                                "marque": {
                                                    "type": "string"
                                                },
                                                "modele": {
                                                    "type": "string"
                                                },
                                                "couleur": {
                                                    "type": "string"
